<%= form_tag students_path do %>
  <%= label_tag(:full_name, "Full name") %>
  <%= text_field_tag(:full_name) %>

  <%= label_tag(:gpa_num, "GPA") %>
  <%= text_field_tag(:gpa_num, nil, placeholder: @placeholder_gpa) %>

  <%= label_tag(:grade_level, "Grade level") %>
  <%= text_field_tag(:grade_level) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create student") %>
<% end %>
